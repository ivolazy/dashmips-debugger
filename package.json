{
    "name": "dashmips-debugger",
    "displayName": "dashmips-debugger",
    "description": "Debugs mips while executing in Dashmips interpreter",
    "version": "0.0.10",
    "license": "MIT",
    "publisher": "roadkillco",
    "repository": {
        "type": "git",
        "url": "https://github.com/nbbeeken/dashmips-debugger.git"
    },
    "icon": "images/dashmips-debugger-icon.png",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Debuggers"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onDebug",
        "onLanguage:mips"
    ],
    "contributes": {
        "languages": [
            {
                "id": "mips",
                "aliases": [
                    "MIPS",
                    "dashmips",
                    "mips"
                ],
                "extensions": [
                    ".mips",
                    ".dmips"
                ],
                "configuration": "./language/mips-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "mips",
                "scopeName": "source.mips",
                "path": "./language/mips.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "mips",
                "path": "./language/mips-snippets.json"
            }
        ],
        "breakpoints": [
            {
                "language": "mips"
            }
        ],
        "debuggers": [
            {
                "type": "dashmips",
                "label": "Dashmips",
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to mips file with main label",
                                "default": "${file}"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop after launch.",
                                "default": true
                            },
                            "log": {
                                "type": "boolean",
                                "description": "Enable Dashmips logger",
                                "default": false
                            },
                            "registerFormat": {
                                "enum": [
                                    "hex",
                                    "bin",
                                    "oct",
                                    "dec"
                                ],
                                "type": "string",
                                "description": "Display registers in formats: 'hex' | 'oct' | 'dec' | 'bin'",
                                "default": "hex"
                            },
                            "port": {
                                "type": "number",
                                "description": "Port that dashmips debugger is running on",
                                "default": 9999
                            },
                            "host": {
                                "type": "string",
                                "description": "Host that dashmips debugger is running on",
                                "default": "localhost"
                            },
                            "launchDebugger": {
                                "type": "boolean",
                                "description": "Launch dashmips in terminal upon debugging",
                                "default": true
                            },
                            "console": {
                                "enum": [
                                    "integratedTerminal",
                                    "externalTerminal"
                                ],
                                "description": "Where to launch the debug target: internal console, integrated terminal, or external terminal.",
                                "default": "integratedTerminal"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "dashmips",
                        "request": "launch",
                        "name": "dashmips (Run Current File)",
                        "program": "${file}",
                        "stopOnEntry": true,
                        "registerFormat": "dec"
                    },
                    {
                        "type": "dashmips",
                        "request": "launch",
                        "name": "dashmips (Attach Current File)",
                        "program": "${file}",
                        "stopOnEntry": true,
                        "registerFormat": "dec",
                        "port": 9999,
                        "host": "localhost",
                        "launchDebugger": false
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Dashmips Debug: Launch",
                        "description": "A new configuration for 'debugging' a user selected mips file.",
                        "body": {
                            "type": "dashmips",
                            "request": "launch",
                            "name": "dashmips (Run Current File)",
                            "program": "^\"\\${file}\"",
                            "stopOnEntry": true,
                            "registerFormat": "dec"
                        }
                    },
                    {
                        "label": "Dashmips Debug: Attach",
                        "description": "A new configuration for 'debugging' a user selected mips file.",
                        "body": {
                            "type": "dashmips",
                            "request": "launch",
                            "name": "dashmips (Attach Current File)",
                            "program": "^\"\\${file}\"",
                            "stopOnEntry": true,
                            "registerFormat": "dec",
                            "port": 9999,
                            "host": "localhost",
                            "launchDebugger": false
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "publish": "npx vsce publish",
        "vscode:prepublish": "rm -rf ./out && npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "mocha -u tdd ./out/tests/"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "mocha": "^5.2.0",
        "npx": "^10.2.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vsce": "^1.51.1",
        "vscode": "^1.1.21",
        "vscode-debugadapter-testsupport": "^1.32.0"
    },
    "dependencies": {
        "vscode-debugadapter": "^1.32.1",
        "vscode-debugprotocol": "^1.32.0"
    }
}
