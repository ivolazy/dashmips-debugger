{
    "name": "dashmips-debugger",
    "displayName": "dashmips-debugger",
    "description": "Debugs mips while executing in Dashmips interpreter",
    "version": "0.0.5",
    "license": "MIT",
    "publisher": "roadkillco",
    "repository": {
        "type": "git",
        "url": "https://github.com/nbbeeken/dashmips-debugger.git"
    },
    "icon": "images/dashmips-debugger-icon.png",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Debuggers"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onDebug",
        "onCommand:extention.dashmips.getProgramName"
    ],
    "contributes": {
        "breakpoints": [
            {
                "language": "mips"
            }
        ],
        "debuggers": [
            {
                "type": "dashmips",
                "label": "Dashmips",
                "program": "./out/debugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to mips file with main label",
                                "default": "${file}"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop after launch.",
                                "default": true
                            },
                            "trace": {
                                "type": "boolean",
                                "description": "Enable logging of the Debug Adapter Protocol.",
                                "default": true
                            },
                            "log": {
                                "type": "boolean",
                                "description": "Enable Dashmips logger",
                                "default": false
                            },
                            "registerFormat": {
                                "type": "string",
                                "description": "Display registers in formats: 'hex' | 'oct' | 'dec' | 'bin'",
                                "default": "hex"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "dashmips",
                        "request": "launch",
                        "name": "dashmips (Current File)",
                        "program": "${file}",
                        "stopOnEntry": true,
                        "registerFormat": "hex"
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Dashmips Debug: Launch",
                        "description": "A new configuration for 'debugging' a user selected mips file.",
                        "body": {
                            "type": "dashmips",
                            "request": "launch",
                            "name": "Current File",
                            "program": "^\"\\${file}\"",
                            "stopOnEntry": true,
                            "registerFormat": "hex"
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "mocha -u tdd ./out/tests/"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "mocha": "^5.2.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vsce": "^1.51.1",
        "vscode": "^1.1.21",
        "vscode-debugadapter-testsupport": "^1.32.0"
    },
    "dependencies": {
        "vscode-debugadapter": "^1.32.1",
        "vscode-debugprotocol": "^1.32.0"
    }
}
